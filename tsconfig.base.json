{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ikigaidev/footer": ["libs/shared/layout/footer/src/index.ts"],
      "@ikigaidev/header": ["libs/shared/layout/header/src/index.ts"],
      "@ikigaidev/icon": ["libs/shared/ui/icon/src/index.ts"],
      "@ikigaidev/navigation": ["libs/shared/layout/navigation/src/index.ts"],
      "@ikigaidev/pipe": ["libs/shared/ui/pipe/src/index.ts"],
      "@ikigaidev/util": ["libs/shared/util/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
